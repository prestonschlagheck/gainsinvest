{
  "buildCommand": "next build",
  "devCommand": "next dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "JOB_QUEUE_TYPE": "memory"
  },
  "functions": {
    "app/api/auth/[...nextauth]/route.ts": {
      "maxDuration": 30
    },
    "app/api/recommendations/route.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
} 